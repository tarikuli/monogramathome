<layout>
    <julfiker_party module="julfiker_party">
        <reference name="left">
            <block type="julfiker_party/event_navigation" name="event_navigation" before="-" template="julfiker_party/event/navigation.phtml">
                <action method="addLink" translate="label" module="julfiker_party"><name>event</name><path>party/event/</path><label>View all events</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_create</name><path>party/event/create/</path><label>Book an event</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_invites</name><path>party/event/invites</path><label>View invites</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_order</name><path>party/event/order</path><label>Make an order</label></action>
            </block>
            <remove name="tags_popular"/>
            <remove name="catalog.compare.sidebar"/>
            <remove name="right.poll"/>
            <remove name="static_image_left"/>
            <remove name="amenu"/>
        </reference>
    </julfiker_party>
    <julfiker_party_event_index translate="label" module="julfiker_party">
        <reference name="left">
            <block type="julfiker_party/event_navigation" name="event_navigation" before="-" template="julfiker_party/event/navigation.phtml">
                <action method="addLink" translate="label" module="julfiker_party"><name>event</name><path>party/event/</path><label>View all events</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_create</name><path>party/event/create/</path><label>Book an event</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_invites</name><path>party/event/invites</path><label>View invites</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_order</name><path>party/event/order</path><label>Make an order</label></action>
            </block>
            <remove name="tags_popular"/>
            <remove name="catalog.compare.sidebar"/>
            <remove name="right.poll"/>
            <remove name="static_image_left"/>
            <remove name="amenu"/>
        </reference>
        <label>Events list</label>
        <update handle="page_two_columns_left" />
        <reference name="content">
            <block type="julfiker_party/event_list" name="event_list" template="julfiker_party/event/list.phtml" />
        </reference>
    </julfiker_party_event_index>
    <julfiker_party_event_create translate="label" module="julfiker_party">
        <label>Book an event</label>
        <update handle="page_two_columns_left" />
        <reference name="left">
            <block type="julfiker_party/event_navigation" name="event_navigation" before="-" template="julfiker_party/event/navigation.phtml">
                <action method="addLink" translate="label" module="julfiker_party"><name>event</name><path>party/event/</path><label>View all events</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_create</name><path>party/event/create/</path><label>Book an event</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_invites</name><path>party/event/invites</path><label>View invites</label></action>
                <action method="addLink" translate="label" module="julfiker_party"><name>event_order</name><path>party/event/order</path><label>Make an order</label></action>
            </block>
            <remove name="tags_popular"/>
            <remove name="catalog.compare.sidebar"/>
            <remove name="right.poll"/>
            <remove name="static_image_left"/>
            <remove name="amenu"/>
        </reference>
        <reference name="head">
            <action method="setTitle"><title>Monogram at home :: Book an event </title></action>
            <action  method="addItem"><type>js</type><name>party/event.js</name></action>
            <block type="core/html_calendar" name="html_calendar" as="html_calendar" template="page/js/calendar.phtml"/>
        </reference>
        <reference name="content">
            <block type="julfiker_party/event_event" name="event_create" template="julfiker_party/event/form/event.phtml" />
        </reference>
        <reference name="before_body_end">
            <block type="customer/form_register" name="customer_popup" as="customer_popup" brefore="-" template="julfiker_party/event/form/customer.phtml"/>
            <block type="customer/form_register" name="address_popup" as="address_popup" template="julfiker_party/event/form/address.phtml" />
        </reference>
    </julfiker_party_event_create>
    <julfiker_party_event_view translate="label" module="julfiker_party">
        <label>Event view page</label>
        <reference name="head">
            <action  method="addItem"><type>js</type><name>party/jquery.circliful.min.js</name></action>
        </reference>
        <update handle="page_two_columns_left" />
