<?xml version="1.0"?>
<config>
	<tabs>
		<infinite translate="label" module="magento_api">
	        <label>Infinite</label>
	        <sort_order>100</sort_order>
	    </infinite>
	</tabs>
	<sections>
		<magento_api translate="label" module="magento_api">                    
			<label>Magento API</label>
			<tab>infinite</tab>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
		    	<api_configuration translate="label" module="magento_api"> 
					<label>API Configutaion</label>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<is_enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_enabled>
                        <api_url translate="label comment">
                            <label>URL</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-url</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Define URL.</comment>
                        </api_url>
					</fields>
				</api_configuration>
			</groups>
		</magento_api>
	</sections>
</config>